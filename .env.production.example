# Production Environment Variables
# Скопируйте этот файл в .env.production и заполните значения

# Server
PORT=3000
NODE_ENV=production

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=forall
DB_USER=postgres
DB_PASSWORD=your_strong_password_here_change_this

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# JWT
JWT_SECRET=your_very_long_random_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d

# CORS (укажите ваш production домен)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=info

# Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# Push Notifications (опционально)
# FCM_SERVER_KEY=your_fcm_server_key
# APNS_KEY_PATH=/path/to/apns/key.p8
# APNS_KEY_ID=your_key_id
# APNS_TEAM_ID=your_team_id

# Social Auth (опционально)
# VK_APP_ID=
# VK_APP_SECRET=
# TELEGRAM_BOT_TOKEN=
